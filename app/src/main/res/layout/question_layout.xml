<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <!-- Money Earned TextView -->
    <TextView
        android:id="@+id/moneyEarnedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/crot"
        android:text=""
        android:textColor="#FF0000"
        android:textSize="25sp"
        android:textStyle="bold" />

    <!-- Question TextView -->
    <TextView
        android:id="@+id/question_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/moneyEarnedText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="Placeholder Question"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/options_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/question_textview"
        android:layout_marginTop="24dp">

        <!-- Option 1 -->
        <RadioButton
            android:id="@+id/option1_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Option 1"
            android:textColor="#FF5733"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Option 2 -->
        <RadioButton
            android:id="@+id/option2_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Option 2"
            android:textColor="#FFC300"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Option 3 -->
        <RadioButton
            android:id="@+id/option3_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Option 3"
            android:textColor="#DA70D6"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Option 4 -->
        <RadioButton
            android:id="@+id/option4_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Option 4"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RadioGroup>

    <!-- Confirm Button -->
    <Button
        android:id="@+id/confirm_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:layout_below="@id/options_radio_group"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="#FF5733"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="12dp"
        android:stateListAnimator="@null"
        android:backgroundTint="#FF5733"
        android:foreground="?android:attr/selectableItemBackgroundBorderless" />

</RelativeLayout>
